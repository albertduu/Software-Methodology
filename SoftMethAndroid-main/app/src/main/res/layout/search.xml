<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/search_root">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/search_toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#006eff"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:title="Search"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tag 1 Row -->
    <Spinner
        android:id="@+id/spinner_type1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <AutoCompleteTextView
        android:id="@+id/edit_value1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="value 1"
        app:layout_constraintStart_toEndOf="@id/spinner_type1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/spinner_type1"
        android:layout_marginStart="8dp" />

    <!-- Tag 2 Row -->
    <Spinner
        android:id="@+id/spinner_type2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spinner_type1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp" />

    <AutoCompleteTextView
        android:id="@+id/edit_value2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="value 2"
        app:layout_constraintStart_toEndOf="@id/spinner_type2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/spinner_type2"
        android:layout_marginStart="8dp" />

    <!-- Logic Group -->
    <RadioGroup
        android:id="@+id/logic_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/spinner_type2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/radio_and"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AND"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radio_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR" />
    </RadioGroup>

    <!-- Search button -->
    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logic_group" />

    <!-- Results Grid -->
    <GridView
        android:id="@+id/results_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:numColumns="3"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/search_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
